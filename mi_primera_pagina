      h1 { color: #2c3e50; }
      .dice-area { display:inline-block; margin: 1rem 0; }
      svg { width: 240px; height: 240px; display:block; margin: 0 auto; transition: transform .7s ease; }
      polygon { fill: #f1c40f; stroke: #b07f00; stroke-width: 2; }
      .center-number { font-size: 40px; font-weight:700; fill: #2c3e50; }
      #result { margin-top: 1rem; background:#f7f9fb; padding: 1rem; border-radius: 6px; color:#34495e; text-align:left; }
      button { background:#2c3e50; color:white; border:none; padding:0.6rem 1rem; border-radius:6px; cursor:pointer; }
      button:active{ transform: translateY(1px); }
